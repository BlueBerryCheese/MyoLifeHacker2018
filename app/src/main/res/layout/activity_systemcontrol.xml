<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/redpinkblurgradation"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/RawLinearLayout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/emgDataTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/maxData"
            android:layout_alignParentStart="true"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_marginTop="50dp"
            android:text="Myo Status"
            android:textSize="15dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClickEMG"/>`
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClickDetect"/>`

        <TextView
            android:id="@+id/maxData"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Myo MaxData"
            android:textSize="15dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:visibility="invisible"
            />


        <TextView
            android:id="@+id/algorithm1"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Myo correlation distance"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:visibility="invisible"
            />


    </LinearLayout>




    <TextView
        android:id="@+id/gestureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/BottomLinearLayout"
        android:text="Connect Myo "
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/BottomLinearLayout"
        android:layout_above="@id/BottomLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/gesturelinearlayout_tot1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/gesturelinearlayout1"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:src="@drawable/gesture_1_nb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Wi-fi" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gesturelinearlayout2"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:src="@drawable/gesture_2_nb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Volume Down" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gesturelinearlayout3"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:src="@drawable/gesture_3_nb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Volume Up" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/BottomLinearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/gesturelinearlayout_tot2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/gesturelinearlayout4"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:src="@drawable/gesture_4_nb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Sound-Vibrate" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gesturelinearlayout5"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:src="@drawable/gesture_5_nb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Screen Brighter" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gesturelinearlayout6"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:src="@drawable/gesture_6_nb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Screen Darker" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
