<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/redpinkblurgradation"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/topLinearLayout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bStopEmg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"

            android:onClick="onClickNoEMG"
            android:text="noEMG" />

        <Button
            android:id="@+id/bEMG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"


            android:layout_marginLeft="160dp"
            android:onClick="onClickEMG"
            android:text="EMG" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/RawLinearLayout"
        android:layout_below="@+id/topLinearLayout"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emgDataTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/bEMG"
            android:layout_below="@+id/bEMG"
            android:layout_marginTop="30dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:text="Myo Status"
            android:textSize="15dp" />
    </LinearLayout>



    <TextView
        android:id="@+id/maxData"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/RawLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Myo MaxData"
        android:textSize="15dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        />


    <LinearLayout
        android:id="@+id/distanceLinearLayout"
        android:layout_below="@+id/maxData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/algorithm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Myo correlation distance"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/gestureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/BottomRelativeLayout"
        android:text="Connect Myo "
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/BottomRelativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bDetect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:onClick="onClickDetect"
            android:text="Detect" />



        <Button
            android:id="@+id/bSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="onClickSave"
            android:text="Save" />
    </RelativeLayout>

</RelativeLayout>
