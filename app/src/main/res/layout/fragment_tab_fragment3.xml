<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/title_margin"
    tools:context=".TabFragment3">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/toptopLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Text_tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="환영합니다. 이곳은 myo의 인식률을 높이기 위한 Adapter를 하는 장소입니다." />

            <TextView
                android:id="@+id/Text_first"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/editbox_transparent_frame"
                android:text="File Delete / Tutorial"
                android:textAlignment="center"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/topLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toptopLinearLayout"
            android:layout_marginBottom="10dp">

            <NumberPicker
                android:id="@+id/remove_gestureNumberPicker"
                android:layout_width="150dp"
                android:layout_height="80dp">

            </NumberPicker>

            <Button
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/imgbtn_rect_state"
                android:text="Remove"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/ad_tutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/imgbtn_rect_state"
                android:text="Tutorial"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/DataSavingLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topLinearLayout"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/Text_second"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editbox_transparent_frame"
                android:text="Data Saving"
                android:textAlignment="center"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/SelectLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DataSavingLinearLayout"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/gestureNumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="80dp">

            </NumberPicker>

            <View
                android:id="@+id/view1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/imgbtn_default"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/view2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/cnt_margin"
                android:background="@drawable/imgbtn_default"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/view3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/cnt_margin"
                android:background="@drawable/imgbtn_default"
                android:text="Hello"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/view4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/cnt_margin"
                android:background="@drawable/imgbtn_default"
                android:text="Hello"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/view5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/cnt_margin"
                android:background="@drawable/imgbtn_default"
                android:text="Hello"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/AdaptiveSavingLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SelectLinearLayout">

            <TextView
                android:id="@+id/Text_third"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editbox_transparent_frame"
                android:text="Data Saving"
                android:textAlignment="center"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/AdaptiveNumberPickerLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_below="@+id/AdaptiveSavingLinearLayout"
            android:layout_marginBottom="20dp">

            <NumberPicker
                android:id="@+id/AdapterNumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="80dp">

            </NumberPicker>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/BottomLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/AdaptiveNumberPickerLinearLayout"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"

            android:weightSum="4">

            <Button
                android:id="@+id/btn_Sync"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/imgbtn_rect_state"
                android:text="Sync"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/gestureTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Connect Myo "
                android:textSize="13dp" />

            <Button
                android:id="@+id/btn_Save"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/imgbtn_rect_state"
                android:text="Save"
                android:textAllCaps="false" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>